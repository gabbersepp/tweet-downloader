{
    "compilerOptions": {
      "skipLibCheck": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "outDir": "dist/",
      "types": [
        "@types/node"
      ],
      "typeRoots": ["./types"],
      "esModuleInterop": true
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "**/*",
      "./types/index.d.ts",   // declaration file path
    ]
  }
  